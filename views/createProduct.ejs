<%- include ('partials/head.ejs') %>

<main>
    <div class="container py-3">
        <%- include ('partials/header.ejs') %>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/home">Home</a></li>
                <li class="breadcrumb-item"><a href="/estoque">Estoque</a></li>
                <li class="breadcrumb-item active" aria-current="page">Cadastrar Produto</li>
            </ol>
        </nav>

        <form class="row g-3 needs-validation" method="POST" action="/addProduct">

            <div class="col-6">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Produto" name="productNameInput"
                        required>
                    <label for="floatingInput">Produto</label>
                </div>
            </div>
            <div class="col-6">
                <div class="form-floating mb-3">
                    <input onkeypress="return event.charCode >= 48" min="0" type="number" class="form-control" id="floatingInput" placeholder="Quantidade"
                        name="productQuantityInput" required>
                    <label for="floatingInput">Quantidade</label>
                </div>
            </div>
            <div class="col-6">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Marca" name="productBrandInput"
                        required>
                    <label for="floatingInput">Marca</label>
                </div>
            </div>

            <div class="col-6">
                <label>Categoria</label>
                <select name="productCategoryInput" class="form-control">
                    <% categories.forEach((category) => {%>
                        <option value="<%= category.categoria %>"><%= category.categoria %></option>
                    <% }) %>
                </select>
            </div>
            <!--<div class="col-6">
                <div class="form-floating" required>
                    <select class="form-select ">
                        <option value="Pepelaria">Pepelaria</option>
                        <option value="Informática">Informática</option>
                        <option value="Limpeza">Limpeza</option>
                    </select>
                </div>
            </div>-->
            <div class="col-12 d-grid">
                <button class="btn btn-primary" type="submit">Cadastrar Produto</button>
            </div>
        </form>
        <!--Footer-->
        <%- include ('partials/footer.ejs') %>
    </div>
</main>